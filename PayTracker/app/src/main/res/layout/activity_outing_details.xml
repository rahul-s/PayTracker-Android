<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.creativecapsule.paytracker.UI.Activities.OutingDetailsActivity">
    <ListView
        android:id="@+id/outing_detail_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/bottom_bar_height"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="@color/bottom_bar_bg_color"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/tab_btn_expenses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tool_bar_summary"
            android:textColor="@color/button_text_color"
            style="?android:attr/borderlessButtonStyle"/>
        <LinearLayout
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/global_margin_5"
            android:background="@color/divider_line_color"/>
        <Button
            android:id="@+id/tab_btn_buddies"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tool_bar_buddies"
            android:textColor="@color/button_text_color"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</RelativeLayout>
